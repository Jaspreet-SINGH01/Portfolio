<style>
    .section { background-image: url(upload/images/products/collection2.jpg); background-repeat: round; padding: 40px; }
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; color: rgb(162, 226, 43); }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
