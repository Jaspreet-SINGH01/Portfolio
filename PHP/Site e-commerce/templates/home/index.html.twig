    #horlogeDroite {
            right: 20px;
            top: 30px;

            font-family: "Trebuchet MS", Arial, sans-serif;
            color: #FFF;
            padding: 4px 3px 2px 5px;
            font-size: .8em;
            background-color: #333;
            box-shadow: 1px 1px 2px #000;
            animation-name: tictac;
            animation-duration: 2s;
            animation-iteration-count: infinite;
            animation-timing-function: ease-in-out;

            position: absolute;
            z-index: 3001;
        }

        @keyframes tictac {
            0% {
                transform: rotate(-5deg);
                margin-right: 13px;
            }

            50% {
                transform: rotate(5deg);
                margin-right: 20px;
            }

            100% {
                transform: rotate(-5deg);
                margin-right: 13px;
            }
        }
</style>

<section id="horlogeDroite">15:56</section>



    <script>
        
        // Clock
        function clock() {
            // now; est une variable, elle à besoin d'un peu d'espace mémoire
            let now = new Date();
            let s = now.getSeconds();

            // condit° ?  si c vrai  : si c'est faux
            s = s < 10 ? s = "0" + s : s;

            let m = now.getMinutes();
            m = m < 10 ? m = "0" + m : m;
            let h = now.getHours();
            h = h < 10 ? h = "0" + h : h;

            document.querySelector('#horlogeDroite').innerHTML = h + ":" + m + ":" + s;
        }

        // Toutes les 1000ms (1s) la fonction clock() sera exécutée
        setInterval(clock, 1000);
        //
        clock();

