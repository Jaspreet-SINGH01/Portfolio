{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                    <legend>Nom d'identité</legend>
                    {{ form_row(registrationForm.lastname) }}
                    {{ form_row(registrationForm.firstname) }}
                    {{ form_row(registrationForm.email) }}
                </fieldset>

                <fieldset class="mb-3">
                <legend>Coordonnées</legend>   
                {{ form_row(registrationForm.adress) }} 
                {{ form_row(registrationForm.zipcode) }} 
                {{ form_row(registrationForm.city) }} 
                </fieldset>
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <p>Lire les <a href="{{ path('cgu') }}" target="_blank">conditions</a></p>
                <div style="text-align: center;">
        <button type="submit" class="btn btn-primary btn-lg my-3">M'inscrire</button>
        <a href="{{ path('app_login') }}" class="btn btn-secondary">Me connecter</a>
                </div>
        {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
    
{% endblock %}
